{% extends 'base.html.twig' %}
{% block body %}
<div class="row row-cols-1 row-cols-md-3 row-cols-sm-2 ">
{% for event in events%}
<div class="col mb-4" style="max-width: 20rem;">
<div class="card">
  <img class="card-img-top" src="{{event.img}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{event.name}}</h5>
    <p class="card-text">{{event.edatetime | date('F-j-Y,g:i a')}}</p>
    <a href="/event/details/{id}" class="btn btn-primary">Show more</a>
    <a href="/event/edit/{id}" class="btn btn-success px-4"><i class="fas fa-edit"></i></a>
    <a href="/event/delete/{id}" class="btn btn-danger px-3"><i class="fas fa-trash-alt"></i></a>
  </div>
</div>
</div>
    {% endfor %}    

</div>
{% endblock %}

